@article{safferGravitationalWaveStressEnergy2018,
  archivePrefix = {arXiv},
  eprinttype = {arxiv},
  eprint = {1710.08863},
  title = {The {{Gravitational Wave Stress}}-{{Energy}} (Pseudo)-{{Tensor}} in {{Modified Gravity}}},
