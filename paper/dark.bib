@article{weisbergTimingMeasurementsRelativistic2010,
  archivePrefix = {arXiv},
  eprinttype = {arxiv},
  eprint = {1011.0718},
  title = {Timing {{Measurements}} of the {{Relativistic Binary Pulsar PSR B1913}}+16},
  volume = {722},
  issn = {0004-637X, 1538-4357},
  doi = {10.1088/0004-637X/722/2/1030},
  abstract = {We present results of more than three decades of timing measurements of the first known binary pulsar, PSR B1913+16. Like most other pulsars, its rotational behavior over such long time scales is significantly affected by small-scale irregularities not explicitly accounted for in a deterministic model. Nevertheless, the physically important astrometric, spin, and orbital parameters are well determined and well decoupled from the timing noise. We have determined a significant result for proper motion, \$$\backslash$mu\_\{$\backslash$alpha\} = -1.43$\backslash$pm0.13\$, \$$\backslash$mu\_\{$\backslash$delta\}=-0.70$\backslash$pm0.13\$ mas yr\$\^\{-1\}\$. The pulsar exhibited a small timing glitch in May 2003, with \$\{$\backslash$Delta f\}/f=3.7$\backslash$times10\^\{-11\}\$, and a smaller timing peculiarity in mid-1992. A relativistic solution for orbital parameters yields improved mass estimates for the pulsar and its companion, \$m\_1=1.4398$\backslash$pm0.0002 $\backslash$ M\_\{$\backslash$sun\}\$ and \$m\_2=1.3886$\backslash$pm0.0002 $\backslash$ M\_\{$\backslash$sun\}\$. The system's orbital period has been decreasing at a rate \$0.997$\backslash$pm0.002\$ times that predicted as a result of gravitational radiation damping in general relativity. As we have shown before, this result provides conclusive evidence for the existence of gravitational radiation as predicted by Einstein's theory.},
  number = {2},
  journal = {The Astrophysical Journal},
  author = {Weisberg, Joel M. and Nice, David J. and Taylor, Joseph H.},
  month = oct,
  year = {2010},
